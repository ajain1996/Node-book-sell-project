<% include ../../partials/header %>

<div class="container my-5">
    <div class="card col-md-6 m-auto shadow py-3">
        <p class="p-1 h5">Add new Comment</p>
        <div class="bg-light my-3 pt-2">
            <h4 class="text-center font-weight-bold"><%= commentdata.title %></h4>
        </div>
        <form action="/sell/<%= commentdata._id %>/comments" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Enter comment..." name="commentE[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-block">Submit</button>
            </div>
            <a class="btn btn-light btn-sm px-3" href="/sell">Go to Sell page</a>
        </form>
    </div>
</div>

<% include ../../partials/footer %>